! Font settings
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.antialias: 1
Xft.rgba: rgb

! XTerm settings
XTerm*faceName: Hack
XTerm*faceSize: 14
XTerm*vt100.translations: #override \
    Shift Ctrl <Key> C: copy-selection(CLIPBOARD) \n\
    Shift Ctrl <Key> V: insert-selection(CLIPBOARD)

! ST settings
st.font: Monofoki:pixelsize=20:antialias=true:autohint=true;

! special
st.foreground:   #00ffa0
st.background:   #05322F
st.cursorColor:  #00ffa0

! black
st.color0:       #808080
st.color8:       #ababab

! red
st.color1:       #ff0070
st.color9:       #ff2270

! green
st.color2:       #00ff00
st.color10:      #00ff00

! yellow
st.color3:       #ffd700
st.color11:      #ffe800

! blue
st.color4:       #0070ff
st.color12:      #00a0ff

! magenta
st.color5:       #dd00dd
st.color13:      #ffbbff

! cyan
st.color6:       #00ffff
st.color14:      #00ffff

! white
st.color7:       #dddddd
st.color15:      #ffffff
